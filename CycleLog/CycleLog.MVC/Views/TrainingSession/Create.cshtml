@model CycleLog.DAL.DTO.TrainingSessionDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TrainingSessionDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DistanceKm" class="control-label"></label>
                <input asp-for="DistanceKm" class="form-control" />
                <span asp-validation-for="DistanceKm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AverageSpeed" class="control-label"></label>
                <input asp-for="AverageSpeed" class="form-control" />
                <span asp-validation-for="AverageSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input type="time" step="1" asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!--IsIndoor is currently always set to true. Label is removed since the user can't input anything-->
                <!--<label asp-for="IsIndoor" class="control-label"></label>-->
                <input type="hidden" value="true" asp-for="IsIndoor" class="form-control" />
                <span asp-validation-for="IsIndoor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
